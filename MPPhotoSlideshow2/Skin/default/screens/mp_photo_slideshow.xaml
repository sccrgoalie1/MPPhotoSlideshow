                    BorderThickness="10" 
                        MaxWidth="{Binding Path=Picture2WidthProperty}"
                        MaxHeight="{Binding Path=Picture2HeightProperty}"
                    HorizontalAlignment="Left" VerticalAlignment="Top" >
